modules = ["nodejs-20", "postgresql-16", "python-3.11", "python3"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "imagemagick", "libiconv", "libxcrypt", "openssl", "pkg-config", "postgresql", "rustc"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "Code Quality Check"
author = 34701515
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üîç Running code quality checks...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üìè Formatting with Black...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "black --check --diff ."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üì¶ Sorting imports with isort...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "isort --check-only --diff ."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üîé Linting with flake8...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flake8 ."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üè∑Ô∏è  Type checking with mypy...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mypy app.py models.py routes.py forms.py --ignore-missing-imports"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"‚úÖ Code quality check complete!\""

[[workflows.workflow]]
name = "Auto-Format Code"
author = 34701515
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üîß Auto-formatting code...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üìè Formatting with Black...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "black ."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üì¶ Sorting imports with isort...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "isort ."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"‚úÖ Code formatting complete!\""

[[ports]]
localPort = 5000
externalPort = 80
